            <TableRow android:id="@+id/TR_sheet_personScarlett"
                style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_personScarlett"
                    style="@style/SheetTable.Header"
                    android:text="@string/personScarlett"
                    />

                <include layout="@layout/layout_cells" />

            </TableRow>

            <!--Чем-->
            <TableRow style="@style/SheetTable.Row">

                <TextView
                    android:id="@+id/tv_sheet_which"
                    style="@style/SheetTable.Title"
                    android:text="@string/which" />

                <Space android:layout_weight="0.6"/>

            </TableRow>

            <TableRow android:id="@+id/TR_sheet_toolCandleStick"
                style="@style/SheetTable.Row">

                <TextView
                    style="@style/SheetTable.Header"
                    android:text="@string/toolСandlestick"
                    />

                <include layout="@layout/layout_cells" />

            </TableRow>

            <TableRow android:id="@+id/TR_sheet_toolDagger"
