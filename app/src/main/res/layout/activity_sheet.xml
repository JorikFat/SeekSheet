<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sheetBlue"
    tools:context=".SheetActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="4dp"
        android:clipToPadding="false"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            >

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_playersTag"
                    style="@style/SheetTable.Title"
                    android:textAllCaps="true"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:text="@string/sheetPlayers"
                    />

                <Space
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    />

                <EditText android:id="@+id/tv_sheet_player1name"
                    style="@style/SheetTable.PlayerCell"
                    tools:text="P1"
                    />

                <EditText android:id="@+id/tv_sheet_player2name"
                    style="@style/SheetTable.PlayerCell"
                    tools:text="P2"
                    />

                <EditText android:id="@+id/tv_sheet_player3name"
                    style="@style/SheetTable.PlayerCell"
                    tools:text="P3"
                    />

                <EditText android:id="@+id/tv_sheet_player4name"
                    style="@style/SheetTable.PlayerCell"
                    tools:text="P4"
                    />

                <EditText android:id="@+id/tv_sheet_player5name"
                    style="@style/SheetTable.PlayerCell"
                    tools:text="P5"
                    />
            </TableRow>

            <!--Кто-->
            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_who"
                    style="@style/SheetTable.Title"
                    android:text="@string/who"
                    />

            </TableRow>

            <TableRow android:id="@+id/tr_sheet_personGreen"
                style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_personGreen"
                    style="@style/SheetTable.Header"
                    android:text="@string/personGreen"
                    />

                <include layout="@layout/layout_cells" />
            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_personMustard"
                    style="@style/SheetTable.Header"
                    android:text="@string/personMustard"
                    />

                <include android:id="@+id/mustard"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_personPickok"
                    style="@style/SheetTable.Header"
                    android:text="@string/personPeacock"
                    />

                <include android:id="@+id/pickok"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_personPlum"
                    style="@style/SheetTable.Header"
                    android:text="@string/personPlum"
                    />

                <include android:id="@+id/plan"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_personScarlett"
                    style="@style/SheetTable.Header"
                    android:text="@string/personScarlett"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <!--Чем-->
            <TableRow style="@style/SheetTable.Row">

                <TextView
                    android:id="@+id/tv_sheet_which"
                    style="@style/SheetTable.Title"
                    android:text="@string/which" />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_toolWrench"
                    style="@style/SheetTable.Header"
                    android:text="@string/toolWrench"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_toolСandlestick"
                    style="@style/SheetTable.Header"
                    android:text="@string/toolСandlestick"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_toolDagger"
                    style="@style/SheetTable.Header"
                    android:text="@string/toolDagger"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_toolRevolver"
                    style="@style/SheetTable.Header"
                    android:text="@string/toolRevolver"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_toolRope"
                    style="@style/SheetTable.Header"
                    android:text="@string/toolRope"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <!--Где-->
            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_where"
                    style="@style/SheetTable.Title"
                    android:text="@string/where"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_whereBath"
                    style="@style/SheetTable.Header"
                    android:text="@string/placeBath"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_whereCabinet"
                    style="@style/SheetTable.Header"
                    android:text="@string/placeCabinet"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_whereDining"
                    style="@style/SheetTable.Header"
                    android:text="@string/placeDining"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_whereBilliard"
                    style="@style/SheetTable.Header"
                    android:text="@string/placeBilliard"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_whereGarage"
                    style="@style/SheetTable.Header"
                    android:text="@string/placeGarage"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_whereBedroom"
                    style="@style/SheetTable.Header"
                    android:text="@string/placeBedroom"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_whereLivingroom"
                    style="@style/SheetTable.Header"
                    android:text="@string/placeLivingroom"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_whereKitchen"
                    style="@style/SheetTable.Header"
                    android:text="@string/placeKitchen"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_whereWinterGarden"
                    style="@style/SheetTable.Header"
                    android:text="@string/placeWinterGarden"
                    />

                <include android:id="@+id/skarlet"
                    layout="@layout/layout_cells"
                    />

            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>