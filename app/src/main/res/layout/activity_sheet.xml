<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sheetBlue"
    tools:context=".SheetActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="4dp"
        android:clipToPadding="false"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            >

            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_playersTitle"
                    style="@style/SheetTable.Title"
                    android:textAllCaps="true"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:text="@string/sheetPlayers"
                    android:layout_weight="0.2"
                    />

                <Space
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    />

                <LinearLayout android:id="@+id/LL_sheet_playersName"
                    style="@style/SheetTable.PlayersRow"
                    >

                    <TextView android:id="@+id/tv_sheet_player1name"
                        style="@style/SheetTable.PlayerCell"
                        />

                    <TextView android:id="@+id/tv_sheet_player2name"
                        style="@style/SheetTable.PlayerCell"
                        />

                    <TextView android:id="@+id/tv_sheet_player3name"
                        style="@style/SheetTable.PlayerCell"
                        />

                    <TextView android:id="@+id/tv_sheet_player4name"
                        style="@style/SheetTable.PlayerCell"
                        />

                    <TextView android:id="@+id/tv_sheet_player5name"
                        style="@style/SheetTable.PlayerCell"
                        />
                </LinearLayout>
            </TableRow>

            <!--Кто-->
            <TableRow style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_who"
                    style="@style/SheetTable.Title"
                    android:text="@string/who"
                    />

                <Space android:layout_weight="0.6"/>

            </TableRow>

            <TableRow android:id="@+id/TR_sheet_personGreen"
                style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_personGreen"
                    style="@style/SheetTable.Header"
                    android:text="@string/personGreen"
                    />

                <include layout="@layout/layout_cells" />
            </TableRow>

            <TableRow android:id="@+id/TR_sheet_personMustard"
                style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_personMustard"
                    style="@style/SheetTable.Header"
                    android:text="@string/personMustard"
                    />

                <include layout="@layout/layout_cells" />

            </TableRow>

            <TableRow android:id="@+id/TR_sheet_personPeacock"
                style="@style/SheetTable.Row">

                <TextView android:id="@+id/tv_sheet_personPeacoсk"
                    style="@style/SheetTable.Header"
                    android:text="@string/personPeacock"
                    />

                <include layout="@layout/layout_cells" />

            </TableRow>

            <TableRow android:id="@+id/TR_sheet_personPlum"
